{% style %}
    .partner-section .grid__item {
      margin-right:6px;
    }
    .partner-section .medium-up--one-quarter {
      width:calc(25% - 6px)

    }
    .index-section:has(.vintage-military-{{ section.id }}) {
      padding: 0;
    }
    .shopify-section:has(.vintage-military-{{ section.id }}) {
      padding:0 0 10px;
      background-color: {{ section.settings.background-color }};
      background-image: url({{ section.settings.bg-image | image_url:width:auto }});
      color: {{ section.settings.text-color }};
      background-position: center;
      background-size:cover;
      background-repeat: no-repeat;
      position:relative;
      top:-10px;
    }


    .shopify-section:has(.vintage-military-{{ section.id }}) {
      background-color: {{ section.settings.backgroundcolor }};
      color: {{ section.settings.fontcolor }};
      background-image: url({{ section.settings.image | image_url:width:auto }});
      background-position: center;
      background-size:cover;
      background-repeat: no-repeat;
    }

    .vintage-military-{{ section.id }} .grid {
      display: flex;
      flex-wrap: wrap;
    }

    .vintage-military-{{ section.id }} .grid-product  {
      flex:1 0 21%;
      border-radius: 10px;
      padding: 10px;
      background-color: {{ section.settings.frame-color }};
      margin-bottom:6px;
    }

    .vintage-military-{{ section.id }} .link-container  {
      display:flex;
      flex-direction:column;
      height: 100%;
    }
    .vintage-military-{{ section.id }} .link-container .grid-product__link  {
      flex-grow:1;
    }

    .vintage-military-{{ section.id }} .link-container .view-btn  {
      border-radius: 5px;
      background-color: {{ section.settings.button-color }};
      display:block;
      padding: 5px;
      text-align:center;
      margin-top:20px;
    }


    .vintage-military-{{ section.id }} .grid-product__image-mask .grid__image-ratio--square  {
      border-radius: 5px;
      overflow:hidden;
      padding: 10px;
      background-color: white;
    }

  .vintage-military-{{ section.id }} .grid__item .sale-price  {
      color: {{ section.settings.text-color }};
    }
    .vintage-military-{{ section.id }} a {
      color: {{ section.settings.text-color }}
    }
    .vintage-military-{{ section.id }} .grid {
      margin:0;
    }


    @media only screen and (min-width: 590px) {
      .grid-product__content {
        margin-bottom: 0px;
        height: 100%;
      }
    }

    .section-header {
      display: flex;
      position:relative;
    }

    .section-header__title {
    }

    .section-header h2 {
      background-color: #004a84;
      display:inline;
        box-shadow:0 0 10px black;
      padding: 25px 190px;
      text-align: center;
      color: white;
      position:relative;
      top:10px;
    }

    .section-header h2 span {
      padding:15px 40px;
      background-color: #004a84;
      position:relative;
      z-index:6;
    }

    .grid-overflow-wrapper {
      margin: 100px 0; 
    }

    .section-header .hdr-wrap:after {
      right:0;
    }
    .section-header .hdr-wrap:before {
      left:0;
    }

    .section-header .hdr-wrap:after,
    .section-header .hdr-wrap:before {
      content:"";
      background-color: #0a406c;
      height: 33px;
      width:50%;
      position:absolute;
      z-index:2;
      bottom:0px;
    }

    .header-stripes {
      background-color: #91002b;
      border-bottom: 17px solid #00579c;
      width: 100%;
      height:84px;
      display:flex;
      align-items: center;
      justify-content: center;
      position:relative;
      z-index:4;
    }

    .vintage-military-{{ section.id }} .grid-product__tag--sale {
      top: 10px;
      background-color: {{ section.settings.frame-color }};
    }


    .vintage-military-{{ section.id }} .sub-wrap {
      background-color: {{ section.settings.frame-color }};
      padding:50px 30px;
      text-align:right;
      border-top-right-radius: 8px;
      border-bottom-right-radius: 8px;
      width:50%;
    }

    .vintage-military-{{ section.id }} h3.section-header__subtitle span {
      display:inline-block;
      width:600px;
      font-size: 21px;
    }

    .view-all-btn {
      height:65px;
      background-color: #00589d;
      color:white;
      position:relative;
      padding: 20px 50px 20px;
      box-shadow: 0px 20px 20px -10px rgba(0,0,0,.6);
      margin-left: 100px;
    }


    .sub-btn-wrap.single .view-all-btn {
      margin-left: 0;
    }
    .view-all-btn:after,
    .view-all-btn:before {
      content:"";
      width:65px;
      height:65px;
      position:absolute;
      display:inline-block;
      background-size: contain;
      top:0;
    }


