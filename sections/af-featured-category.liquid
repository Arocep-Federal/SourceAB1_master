      right:-65px;
      background-image: url("data:image/svg+xml,%3Csvg id='Layer_1' data-name='Layer 1' xmlns='http://www.w3.org/2000/svg' width='213.71' height='208.35' viewBox='0 0 213.71 208.35'%3E%3Crect x='.5' y='.5' width='212.71' height='207.35' fill='none' stroke='%2390182d' stroke-miterlimit='10'/%3E%3Cpath d='M131.41,99.04l-43.97-25.39c-3.95-2.28-8.89.57-8.89,5.13v50.78c0,4.56,4.94,7.42,8.89,5.13l43.97-25.39c3.95-2.28,3.95-7.99,0-10.27Z' fill='%23fff'/%3E%3C/svg%3E");
      background-color: #90002a;
      border-top-right-radius: 8px;
      border-bottom-right-radius: 8px;
    }
    .view-all-btn:before {
      left:-65px;
      background-image: url("data:image/svg+xml,%3Csvg id='Layer_1' data-name='Layer 1' xmlns='http://www.w3.org/2000/svg' width='213.71' height='208.35' viewBox='0 0 213.71 208.35'%3E%3Crect x='.5' y='.5' width='212.71' height='207.35' fill='none' stroke='%2312416c' stroke-miterlimit='10'/%3E%3Cpath d='M111.86,64.64l8.22,25.31h26.61c5.1,0,7.22,6.53,3.09,9.52l-21.53,15.64,8.22,25.31c1.58,4.85-3.97,8.88-8.1,5.89l-21.53-15.64-21.53,15.64c-4.13,3-9.68-1.04-8.1-5.89l8.22-25.31-21.53-15.64c-4.13-3-2.01-9.52,3.09-9.52h26.61s8.22-25.31,8.22-25.31c1.58-4.85,8.44-4.85,10.01,0Z' fill='%23fff'/%3E%3C/svg%3E");
      background-color: #0a406c;
      border-top-left-radius: 8px;
      border-bottom-left-radius: 8px;
    }

    .sub-btn-wrap {
      display:flex;
      margin: 75px 0;
      align-items:center;
    }
    .sub-btn-wrap.single {
     justify-content:center;
    }
    @media only screen and (max-width: 1023px) {
      .vintage-military-{{ section.id }} .grid-product  {
        flex:1 0 35%;
      }

      .section-header h2 {
        padding: 35px 90px;
        font-size: 1.8rem;
        top:5px;
      }
    }
    @media only screen and (max-width: 589px) {

      .vintage-military-{{ section.id }} .grid {
        /* display: flex; */
        flex-wrap: nowrap;
      }
      .vintage-military-{{ section.id }} .grid-product  {
        flex:1 0 60%;
      }
      .section-header h2 {
        background-color: #004a84;
        box-shadow:0 0 10px black;
        display:inline;
        padding: 40px 25px;
        text-align: center;
        color: white;
        font-size: 1.4rem;
        top:0;
      }

    .section-header h2 span {
      padding:15px 10px;
      background-color: #004a84;
      position:relative;
      z-index:3;
    }

    .sub-btn-wrap {
      flex-direction: column;
      flex:1;
    }

    }
{% endstyle %}
<div class="vintage-military-{{ section.id }} partner-section">
  {%- liquid
    assign per_row = section.settings.per_row
    assign product_limit = per_row | times: section.settings.rows
    assign collection = collections[section.settings.home_featured_products]

    capture gridView
      render 'products_per_row', products_per_row: per_row, style: 'fractions'
    endcapture
  -%}

  <div
    id="CollectionSection-{{ section.id }}"
    data-section-id="{{ section.id }}"
    data-section-type="featured-collection"
  >
    {%- if section.settings.title != blank -%}
      <div class="page-width-full">
        <div class="section-header">
          <div class="header-stripes">
            <div class="section-header__title">
              <div class="hdr-wrap">
                <h2>
                  <span>Shop {{ section.settings.title }}</span>
                </h2>
              </div>
            </div>
          </div>
        </div>
      </div>
    {% endif %}
    <div class="page-width page-width--flush-small">
      <div class="grid-overflow-wrapper">
        <div class="grid grid--uniform" data-aos="overflow__animation">
          {% if section.settings.home_featured_products == blank
            or collections[section.settings.home_featured_products].empty?
            or collections[section.settings.home_featured_products].products_count == 0
          %}
            <div class="grid__item">
              <div class="grid grid--uniform">
                {%- for i in (1..product_limit) -%}
                  <div class="grid__item grid-product {{ gridView }}" data-aos="row-of-{{ per_row }}">
                    <div class="grid-product__content">
                      <a href="{{ product.url | within: collection }}" class="grid-product__link">
                        <div class="grid-product__image-mask">
                          {% capture current %}{% cycle 1, 2, 3, 4, 5, 6 %}{% endcapture %}
                          <div class="image-wrap">
                            {{ 'product-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
                          </div>
                        </div>
                        <div class="grid-product__meta">
                          <div class="grid-product__title">{{ 'home_page.onboarding.product_title' | t }}</div>
                          <div class="grid-product__price">$29</div>
                        </div>
                      </a>
                    </div>
                  </div>
                {%- endfor -%}
              </div>
            </div>

          {% else %}
            {%- for product in collections[section.settings.home_featured_products].products limit: product_limit -%}
              {%- render 'product-grid-item',
                product: product,
                collection: collection,
                per_row: per_row,
                fallback: '66vw'
              -%}
            {%- endfor -%}

            {% if section.settings.view_all %}
              {% if section.settings.rows > 1 %}
                {% comment %}
                  <div class="grid__item small--hide text-center">
                    <a href="{{ collections[section.settings.home_featured_products].url }}" class="btn">
                      {{- 'collections.general.all_of_collection' | t -}}
                    </a>
                  </div>
                {% endcomment %}
              {% endif %}

              {% comment %}
                <div class="grid__item grid__item--view-all text-center {{ gridView }} medium-up--hide">
                  <a href="{{ collections[section.settings.home_featured_products].url }}" class="grid-product__see-all">
                    {{ 'collections.general.view_all_products_html' | t: count: collection.products_count }}
                  </a>
                </div>
              {% endcomment %}
            {% endif %}
          {% endif %}
        </div>
      </div>
    </div>

    {% if section.settings.subtitle != blank and section.settings.view_all %}
      <div class="sub-btn-wrap">
        <div class="sub-wrap">
          <h3 class="section-header__subtitle">
            <span>{{ section.settings.subtitle }}</span>
          </h3>
        </div>
        <a href="{{ collections[section.settings.home_featured_products].url }}" class="view-all-btn">
          Shop All {{ section.settings.title }}
        </a>
      </div>
    {% endif %}

    {% if section.settings.subtitle == blank and section.settings.view_all %}
      <div class="sub-btn-wrap single">
        <a href="{{ collections[section.settings.home_featured_products].url }}" class="view-all-btn">
          Shop All {{ section.settings.title }}
        </a>
      </div>
    {% endif %}
  </div>
</div>
{% schema %}
{
  "name": "AF Featured Category",
  "class": "index-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "t:sections.featured-collection.settings.title.label",
      "default": "Featured Category"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "This & That"
    },
    {
      "type": "color",
      "id": "background-color",
      "label": "Background Color",
      "default": "#fff"
    },
    {
      "type": "image_picker",
      "id": "bg-image",
      "label": "Background Image"
    },
    {
      "type": "color",
      "id": "text-color",
      "label": "Text Color",
      "default": "#fff"
    },
    {
      "type": "color",
      "id": "frame-color",
      "label": "Frame Color",
      "default": "#0a406c"
    },
    {
      "type": "color",
      "id": "button-color",
      "label": "Frame Button Color",
      "default": "#01589f"
    },
    {
      "type": "collection",
      "id": "home_featured_products",
      "label": "t:sections.featured-collection.settings.home_featured_products.label"
    },
    {
      "type": "checkbox",
      "id": "view_all",
      "label": "t:sections.featured-collection.settings.view_all.label",
      "default": true
    },
    {
      "type": "range",
      "id": "per_row",
      "label": "t:sections.featured-collection.settings.per_row.label",
      "default": 4,
      "min": 1,
      "max": 5,
      "step": 1
    },
    {
      "type": "range",
      "id": "rows",
      "label": "t:sections.featured-collection.settings.rows.label",
      "default": 1,
      "min": 1,
      "max": 5,
      "step": 1
    }
  ],
  "presets": [
    {
      "name": "AF Featured Categoy"
    }
  ],
  "blocks": [],
  "disabled_on": {
    "groups": ["footer", "header", "custom.popups"]
  }
}
{% endschema %}
