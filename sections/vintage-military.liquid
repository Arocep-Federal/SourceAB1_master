{%- style -%}
  .military-background--{{ section.id }} {
    background-image:url({{ section.settings.image | image_url:width:auto }});
    background-size:cover;
    background-color: {{ section.settings.vintage_military_overlay }};
    height:{{section.settings.height}}vh;
    min-height:800px;
    width:auto;
    position:relative;
  }


  .shopify-section:has(.military-background--{{ section.id }}) .af-text {
    color: {{section.settings.fontcolor}};
  }
  .shopify-section:has(.military-background--{{ section.id }}) .af-text .btn {
    color: {{section.settings.fontcolor}};
    border-color:  {{section.settings.fontcolor}};
  }

  .af-text .hero__kicker { margin: 0 0 10px; font-size:16px; }
  .af-text h2 { margin: 0 0 10px; }

  @media only screen and (min-width: 590px){
    
    .military-background--{{ section.id }}  .animation-contents {
      /* text-transform: uppercase; */
      margin-bottom:0;
    }
    
    .military-background--{{ section.id }} .hero__title .animation-contents{
      /* text-transform: uppercase; */
      font-size: 20px;
      margin-bottom:0;
    }
    .hero__text-content.vertical-center {
      padding:0 0 200px
    }
    .af-text .hero__kicker { margin: 0 0 10px; font-size:20px;}

  }
  @media only screen and (min-width: 769px){

      .military-background--{{ section.id }} {
          padding-bottom:100px;
      }
      .military-background--{{ section.id }} .hero__text-wrap .hero__text-content.horizontal-right {
        padding-left:40%;
      }
      .military-background--{{ section.id }} .hero__text-wrap .hero__text-content.horizontal-left {
        padding-right:40%;
      }
      .military-background--{{ section.id }} .hero__text-wrap .hero__text-content.horizontal-center {
        padding: 0 20%;
      }

  }

  @media only screen and (max-width: 589px){
    .military-background--{{ section.id }} {
    height:50vh;
    min-height:600px;
  }
    .hero__text-content.vertical-center {
      padding:0 0 100px
    }
  }
{%- endstyle -%}


<div
  class="hero military-background--{{ section.id }} vintage-military loaded"
  data-section-id="{{ section.id }}"
  data-aos="hero__animation"
  loading="lazy"

  {%- unless section.settings.vintage_military_overlay != "none" -%} 
  style="background-blend-mode: luminosity"
  {%- endunless -%}
>
  {% comment %} <div class="hero__media hero__media--{{ section.id }}"></div> {% endcomment %}
  <div class="hero__text-wrap hero__text-wrap--absolute">
    <div class="page-width text-center">
      <div class="hero__text-content {{ section.settings.text_align }}">
        {%- unless section.settings.headline == blank -%}
          <div class="af-text hero__title">
            <div class="animation-cropper">
              <div class="animation-contents">
                {%- unless section.settings.kicker == blank -%}
                  <div class="af-text hero__kicker">
                    <div class="animation-cropper">
                      <div class="animation-contents">{{ section.settings.kicker }}</div>
                    </div>
                  </div>
                {%- endunless -%}
                <h2>{{ section.settings.headline | newline_to_br }}</h2>
              </div>
            </div>
          </div>
        {%- endunless -%}

        {%- unless section.settings.subheadline == blank -%}
          <div class="af-text hero__subtitle">
            <div class="animation-cropper">
              <div class="animation-contents">
                <p>{{ section.settings.subheadline | escape }}</p>
              </div>
            </div>
          </div>
        {%- endunless -%}

        {%- unless section.settings.link_text == blank -%}
          <div class="af-text hero__link">
            <div class="animation-cropper">
              <div class="animation-contents">
                
            <div class="button_super {% if section.settings.button_style == 'secondary' %}secondary{% endif %}">
              <span class="super_button_circle"> </span>
              <a href="{{ section.settings.link }}" class="button_super_inner">
                <span class="button_text_container">
                  {{ section.settings.link_text }}
                </span>
              </a>
            </div>
                
                {% comment %} <a href="{{ section.settings.link }}" class="btn btn--small btn--inverse">
                  {{ section.settings.link_text | escape }}
                </a> {% endcomment %}
              </div>
            </div>
          </div>
        {%- endunless -%}
      </div>
    </div>
  </div>
</div>

