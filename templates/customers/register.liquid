
{%- style -%}
  .main-content:has(.register) {
    background: #fff;
    background: linear-gradient(0deg, rgba(195,195,195,1) 0%, rgba(255,255,255,1) 45%, rgba(255,255,255,1) 100%);
  }
  
  .register input {
    border-radius:5px;
    margin-bottom:10px; 
    border: 1px solid #ccc;
  }

{%- endstyle -%}

<div class="page-width page-content register">
  <div class="grid">
    <div class="grid__item medium-up--one-half medium-up--push-one-quarter">
      <header class="section-header">
        <h1 class="section-header__title">{{ 'customer.register.title' | t }}</h1>
      </header>

      <div class="form-vertical">
        <div>
          {% form 'create_customer' %}
            {{ form.errors | default_errors }}

            <div class="one-full ">
              <input
                type="text"
                name="customer[first_name]"
                placeholder="First Name"
                id="FirstName"
                class="input-full"
                {% if form.first_name %}
                  value="{{ form.first_name }}"
                {% endif %}
                autocapitalize="words"
                autofocus
              >
            </div>

            <div class="one-full ">
              <input
                type="text"
                name="customer[last_name]"
                placeholder="Last Name"
                id="LastName"
                class="input-full"
                {% if form.last_name %}
                  value="{{ form.last_name }}"
                {% endif %}
                autocapitalize="words"
              >
            </div>
            <div class="one-full ">
              {% comment %} <label for="Email">{{ 'customer.register.email' | t }}</label> {% endcomment %}
              <input
                type="email"
                name="customer[email]"
                placeholder="Email"
                id="Email"
                class="input-full{% if form.errors contains 'email' %} error{% endif %}"
                {% if form.email %}
                  value="{{ form.email }}"
                {% endif %}
                autocorrect="off"
                autocapitalize="off"
              >
            </div>
            <div class="one-full ">
              {% comment %} <label for="CreatePassword">{{ 'customer.register.password' | t }}</label> {% endcomment %}
              <input
                type="password"
                name="customer[password]"
                placeholder="Password"
                id="CreatePassword"
                class="input-full{% if form.errors contains 'password' %} error{% endif %}"
              >
            </div>
            <div class="one-full ">
              {% comment %} <p> {% endcomment %}
              {% comment %} <label for="register-submit" class="hidden-label">{{ 'customer.register.submit' | t }}</label> {% endcomment %}
              <input
                type="submit"
                id="register-submit"
                value="{{ 'customer.register.submit' | t }}"
                class="btn btn--full btn--no-animate"
              >
              {% comment %} </p> {% endcomment %}
            </div>
          {% endform %}
        </div>
      </div>
    </div>
  </div>
</div>
